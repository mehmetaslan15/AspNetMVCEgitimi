
@{
    ViewBag.Title = "Mvc04HttpUtility";
}

<h2>Mvc04HttpUtility</h2>

<p>Mvc04HttpUtility ile içerikleri web için kodlayabilir veya kodlanmış içeriği çözebiliriz.
    </p>

@{ 
    string baslik = "<h1>HttpUtility HtmlEncode, HtmlDecode</h1>";
    string baslikHtmlEncode = HttpUtility.HtmlEncode(baslik);
    string baslikHtmlDecode = HttpUtility.HtmlDecode(baslikHtmlEncode);
}

<h3>Başlık : @baslik</h3>

<h3>Başlık HtmlEncode Hali: @baslikHtmlEncode</h3>

<h3>Başlık HtmlDecode Hali: @baslikHtmlDecode</h3>

<hr />

@Html.Raw(baslik)
